{
    "builders": [
        {
            "ami_name": "CLAIRE Evidence Extractor",
            "type": "amazon-ebs",
            "instance_type": "t2.small",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "ubuntu/images/*ubuntu-focal-20.04-amd64-server-*",
                    "root-device-type": "ebs"
                },
                "owners": [
                    "099720109477"
                ],
                "most_recent": true
            },
            "ssh_username": "ubuntu"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "./bin",
            "destination": "/home/ubuntu"
        },
        {
            "type": "shell",
            "script": "./setup.sh"
        }
    ]
}